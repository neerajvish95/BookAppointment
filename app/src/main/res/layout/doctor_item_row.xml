<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/main_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_action_profile" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/badge"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/correct" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/ratingBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="rating"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Doctor Name"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/specilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Dentist"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="degree"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/doctor_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="time"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/fees"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="Rs 200     "
                        android:textColor="@color/colorPrimaryd"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnBook"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="25"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="Book"
                        android:textColor="@color/white"
                        android:textSize="10dp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/bottomShade"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.2"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f3f3f3"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/experience_icon"
                    android:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv_year_exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/vert_line"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"

                    android:text="500"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            <TextView-->
            <!--                android:id="@+id/tv_year_exp"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="20"-->
            <!--                android:drawableLeft="@drawable/experience_icon"-->
            <!--                android:drawableRight="@drawable/vert_line"-->
            <!--                android:drawablePadding="2dp"-->
            <!--                android:gravity="center|left"-->
            <!--                android:scaleX="0.9"-->
            <!--                android:scaleY="0.9"-->
            <!--                android:text="500"-->
            <!--                android:textSize="10dp"-->
            <!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/tvDoctorArea"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="38"
                android:drawableLeft="@drawable/ic_action_marker"
                android:drawableRight="@drawable/vert_line"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:gravity="center|left"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:text="Kandivali"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_clinics"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="38"
                android:drawablePadding="2dp"
                android:gravity="center|left"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>