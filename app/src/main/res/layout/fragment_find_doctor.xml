<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:nee="http://schemas.android.com/apk/res-auto"

    android:id="@+id/lyt_pass_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="20dp"
    tools:context=".fragment.FindDoctor">

    <RelativeLayout
        android:id="@+id/lyt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/edit_text_border">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#2196F3"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_name"
            android:background="@color/transferentWhite"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:lines="1"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyt_name"
        android:layout_margin="3dp"
        android:background="@drawable/edit_text_border">


        <TextView
            android:id="@+id/text_email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#2196F3"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_email"
            android:background="@color/transferentWhite"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lyt_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyt_email"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/lyt_password"

        android:background="@drawable/edit_text_border">

        <EditText
            android:id="@+id/edt_password1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transferentWhite"
            android:focusable="false"
            android:gravity="center"
            android:inputType="number"
            android:lines="1"
            android:maxLength="10"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lyt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyt_email"

        android:layout_alignStart="@+id/lyt_line"
        android:layout_alignLeft="@+id/lyt_line"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edit_text_border">



        <TextView
            android:id="@+id/text_password"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#2196F3"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/edt_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_password"
            android:background="@color/transferentWhite"
            android:inputType="number"
            android:lines="1"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_password"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="REGISTER"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp" />

    <View
        android:id="@+id/lyt_line"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_below="@id/btnRegister"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/text_already_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lyt_line"

        android:layout_centerHorizontal="true"
        android:textSize="16sp" />


</RelativeLayout>